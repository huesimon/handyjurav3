<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anthonsteiness.handyjuralayout.CreateTaskActivity">

    <include layout="@layout/app_bar"
        android:id="@+id/action_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick=""
        android:clickable="true"
        android:soundEffectsEnabled="false"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/action_bar">

        <TextView
            android:id="@+id/customerView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Kundeoplysninger"
            android:textSize="24sp"
            android:layout_below="@+id/action_bar"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/customerView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="Navn" />

        <EditText
            android:id="@+id/adress"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/customerView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/name"
            android:inputType="text"
            android:text="Adresse" />

        <EditText
            android:id="@+id/city"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="By" />
        <EditText
            android:id="@+id/zip"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/adress"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/city"
            android:inputType="text"
            android:text="Post nr." />
        <EditText
            android:id="@+id/phone"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/city"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:text="Telefon nr." />

        <TextView
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Opgavebeskrivelse"
            android:textSize="24sp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/topic"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/task"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="Emne" />
        <EditText
            android:id="@+id/price"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/description"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:text="Pris" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/topic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:text="Beskrivelse"
            tools:lines="10" />

        <Button
            android:id="@+id/addTask"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/description"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/price"
            android:text="+"
            android:textSize="24sp" />
    </RelativeLayout>
    </RelativeLayout>

